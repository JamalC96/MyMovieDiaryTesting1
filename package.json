{
  "name": "mymoviediary",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "cross-env NODE_ENV=dev PORT=3001 node dist/bin/www --exit",
    "build": "npm run compile",
    "postbuild": "npm start",
    "prebuild": "npm-run-all test clean",
    "clean": "rimraf ./dist && mkdir dist",
    "lint": "esw  ./test ./routes ./models/ app.js bin/www ",
    "lint:fix": "npm run lint -- --fix",
    "lint:watch": "npm run lint -- --watch",
    "test": "cross-env NODE_ENV=test mocha",
    "test:report": "nyc mocha",
    "compile": "babel ./ --out-dir dist/ --ignore ./node_modules,./test --copy-files ",
    "start:prod": "cross-env NODE_ENV=dev node dist/bin/www",
    "start:watch": "cross-env NODE_ENV=dev nodemon --exec babel-node bin/www",
    "prebuild:dev": "npm-run-all test clean",
    "build:dev": "npm run compile",
    "postbuild:dev": "npm run start:prod",
    "build:release": "npm-run-all  test clean compile ",
    "postbuild:release": "rimraf dist/.git dist/test dist/nodemon.json"
  },
  "dependencies": {
    "@babel/runtime": "^7.6.3",
    "body-parser": "^1.19.0",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "ejs": "~2.6.1",
    "express": "~4.16.1",
    "fuse.js": "^3.4.5",
    "http-errors": "~1.6.3",
    "lodash": "^4.17.15",
    "mongodb": "^3.3.3",
    "mongodb-memory-server": "latest",
    "mongodb-uri": "^0.9.7",
    "mongoose": "^5.7.6",
    "morgan": "~1.9.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/node": "^7.6.3",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.3.4",
    "@babel/register": "^7.0.0",
    "@types/chai-http": "^4.2.0",
    "chai": "^4.0.2",
    "cross-env": "^6.0.3",
    "eslint": "^6.6.0",
    "eslint-watch": "^6.0.1",
    "mocha": "^6.2.0",
    "nodemon": "^1.19.4",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.0",
    "supertest": "^4.0.2"
  }
}